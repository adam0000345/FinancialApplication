<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/WACCDetailedPageCostOfCapitalTitle"
        android:layout_width="329dp"
        android:layout_height="31dp"
        android:text="'WACC: Detailed' Model Inputs: Cost of Capital and Terminal Value"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/WACCDetailedPageCostOfCapitalSubTitle"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="4dp"
        android:text="COST OF CAPITAL"
        app:layout_constraintBottom_toTopOf="@+id/WACCDetailedPageCostOfCapitalDebtValue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/WACCDetailedPageCostOfCapitalTitle"
        app:layout_constraintVertical_bias="0.04" />

    <TextView
        android:id="@+id/WACCDetailedPageCostOfCapitalCash"
        android:layout_width="93dp"
        android:layout_height="40dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="20dp"
        android:text="TextView"
        app:layout_constraintEnd_toStartOf="@+id/WACCDetailedPageCostOfCapitalCashValue"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/WACCDetailedPageCostOfCapitalSubTitle" />

    <EditText
        android:id="@+id/WACCDetailedPageCostOfCapitalCashValue"
        android:layout_width="89dp"
        android:layout_height="44dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="16dp"
        android:text="$0.00"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/WACCDetailedPageCostOfCapitalTitle" />

    <TextView
        android:id="@+id/WACCDetailedPageCostOfCapitalDebt"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginEnd="136dp"
        android:layout_marginStart="46dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        app:layout_constraintEnd_toStartOf="@+id/WACCDetailedPageCostOfCapitalDebtValue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/WACCDetailedPageCostOfCapitalCash" />

    <EditText
        android:id="@+id/WACCDetailedPageCostOfCapitalDebtValue"
        android:layout_width="89dp"
        android:layout_height="44dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:text="$0.00"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/WACCDetailedPageCostOfCapitalCashValue" />

    <TextView
        android:id="@+id/WACCDetailedPageCostOfCapitalMarketCap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="46dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="136dp"
        android:text="TextView"
        app:layout_constraintEnd_toStartOf="@+id/WACCDetailedPageCostOfCapitalMarketCapValue"
        app:layout_constraintHorizontal_bias="0.612"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/WACCDetailedPageCostOfCapitalDebt" />

    <TextView
        android:id="@+id/WACCDetailedPageCostOfCapitalEquityBeta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="156dp"
        android:text="TextView"
        app:layout_constraintEnd_toStartOf="@+id/WACCDetailedPageCostOfCapitalEquityBetaValue"
        app:layout_constraintTop_toBottomOf="@+id/WACCDetailedPageCostOfCapitalMarketCap" />

    <TextView
        android:id="@+id/WACCDetailedPageCostOfCapitalRiskFreeRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="148dp"
        android:text="TextView"
        app:layout_constraintEnd_toStartOf="@+id/WACCDetailedPageCostOfCapitalRiskFreeRateValue"
        app:layout_constraintTop_toBottomOf="@+id/WACCDetailedPageCostOfCapitalEquityBeta" />

    <EditText
        android:id="@+id/WACCDetailedPageCostOfCapitalMarketCapValue"
        android:layout_width="89dp"
        android:layout_height="44dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="24dp"
        android:text="$0.00"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/WACCDetailedPageCostOfCapitalDebtValue" />

    <EditText
        android:id="@+id/WACCDetailedPageCostOfCapitalEquityBetaValue"
        android:layout_width="89dp"
        android:layout_height="44dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="24dp"
        android:text="0.00"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/WACCDetailedPageCostOfCapitalMarketCapValue" />

    <EditText
        android:id="@+id/WACCDetailedPageCostOfCapitalRiskFreeRateValue"
        android:layout_width="89dp"
        android:layout_height="44dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="24dp"
        android:text="0.00%"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/WACCDetailedPageCostOfCapitalEquityBetaValue" />

</android.support.constraint.ConstraintLayout>