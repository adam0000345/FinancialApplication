<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="12dp"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/WACCDetailedResultsYearNumber"
            android:layout_width="104dp"
            android:layout_height="28dp"
            android:layout_marginStart="128dp"
            android:layout_marginEnd="128dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/WACCDetailedResultsRevenueNumber"
            android:layout_width="114dp"
            android:layout_height="27dp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/WACCDetailedResultsCostOfGoodsNumber"
            android:layout_width="114dp"
            android:layout_height="27dp"
            android:layout_marginTop="2dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/WACCDetailedResultsRevenueNumber" />

        <TextView
            android:id="@+id/WACCDetailedPageResultsSGANumber"
            android:layout_width="116dp"
            android:layout_height="27dp"
            android:layout_marginTop="2dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/WACCDetailedResultsCostOfGoodsNumber" />

        <TextView
            android:id="@+id/WACCDetailedResultsEBITNumber"
            android:layout_width="118dp"
            android:layout_height="32dp"
            android:layout_marginTop="2dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/WACCDetailedPageResultsSGANumber" />

        <TextView
            android:id="@+id/WACCDetailedResultsDepreciationNumber"
            android:layout_width="118dp"
            android:layout_height="32dp"
            android:layout_marginTop="3dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/WACCDetailedResultsEBITNumber" />

        <TextView
            android:id="@+id/WACCDetailedResultsOperatingCashFlowNumber"
            android:layout_width="111dp"
            android:layout_height="42dp"
            android:layout_marginTop="2dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/WACCDetailedResultsDepreciationNumber" />

        <TextView
            android:id="@+id/WACCDetailedResultsCashExpenditureNumber"
            android:layout_width="111dp"
            android:layout_height="44dp"
            android:layout_marginTop="2dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/WACCDetailedResultsOperatingCashFlowNumber" />

        <TextView
            android:id="@+id/WACCDetailedResultsChangeInNetWorkingCapitalNumber"
            android:layout_width="132dp"
            android:layout_height="44dp"
            android:layout_marginTop="10dp"
            android:inputType="textMultiLine"
            android:minLines="2"
            android:scrollHorizontally="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/WACCDetailedResultsCashExpenditureNumber" />

        <TextView
            android:id="@+id/WACCDetailedResultsFreeCashFlowNumber"
            android:layout_width="168dp"
            android:layout_height="33dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="9dp"
            app:layout_constraintBottom_toTopOf="@+id/WACCDetailedResultsWACCNumber"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/WACCDetailedResultsChangeInNetWorkingCapitalNumber" />

        <TextView
            android:id="@+id/WACCDetailedResultsWACCNumber"
            android:layout_width="175dp"
            android:layout_height="26dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/WACCDetailedResultsFreeCashFlowNumber" />

        <TextView
            android:id="@+id/WACCDetailedResultsDiscountFactorNumber"
            android:layout_width="175dp"
            android:layout_height="26dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/WACCDetailedResultsWACCNumber" />

        <TextView
            android:id="@+id/WACCDetailedResultsPVNumber"
            android:layout_width="175dp"
            android:layout_height="26dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="60dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/WACCDetailedResultsDiscountFactorNumber"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/button"
            android:layout_width="77dp"
            android:layout_height="29dp"
            android:text="Add Notes"
            android:textSize="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>